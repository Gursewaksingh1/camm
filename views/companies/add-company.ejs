<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/adminnav.ejs') %>
    <% if (haserror) {%>
        <%= errormsg %>
        <% } %>
        <% if (errorsmsg) {%>
            <%= errorsmsg %>
            <% } %>
    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-company<% } else { %>addcompany<% } %>" method="POST">
             <div class="form-control">
                <label for="nameOfCompany">nameOfCompany</label>
                <input class="<%= validationInput.find(e => e.param === 'nameOfCompany') ? 'invalid' : '' %>" type="text" name="nameOfCompany" id="nameOfCompany" value="<% if (editing|| haserror) { %><%= product.nameOfCompany %><% } %>">
            </div>
            <div class="form-control">
                <label for="email">email</label>
                <input class="<%= validationInput.find(e => e.param === 'email') ? 'invalid' : '' %>" type="text" name="email" id="email" value="<% if (editing|| haserror) { %><%= product.email %><% } %>">
            </div>
            
            <div class="form-control">
                <% if (!editing) {%>
                <label f1or="password">Password</label>
                <input class="<%= validationInput.find(e => e.param === 'password') ? 'invalid' : '' %>" type="password" name="password" id="password" value="<% if (editing|| haserror) { %><%= product.password %><% } %>">
                <% } %>
            </div>

            <div class="form-control">
                <label for="ownerName">ownerName</label>
                <input class="<%= validationInput.find(e => e.param === 'ownerName') ? 'invalid' : '' %>" type="text" name="ownerName" id="ownerName"  value="<% if (editing|| haserror) { %><%= product.ownerName %><% } %>">
            </div>
            <div class="form-control">
                <label for="aboutcompany">aboutcompany</label>
                <input class="<%= validationInput.find(e => e.param === 'aboutCompany') ? 'invalid' : '' %>" type="text" name="aboutCompany" id="aboutCompany" value="<% if (editing|| haserror) { %><%= product.aboutCompany %><% } %>"> </input>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= product._id %>" name="companyid">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>add-company <% } %></button>
        </form>

    </main>
<%- include('../includes/end.ejs') %>
